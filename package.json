{
  "name": "mcp-gmail",
  "version": "0.1.0",
  "description": "Gmail MCP server with comprehensive Gmail API integration - 17 tools for email management, search, sending, labels, filters, and settings",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-gmail": "dist/index.js"
  },
  "keywords": [
    "gmail",
    "google",
    "email",
    "mcp",
    "model-context-protocol",
    "ai",
    "automation",
    "claude",
    "anthropic",
    "oauth",
    "typescript",
    "email-management"
  ],
  "author": "Dennison Bertram",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dennisonbertram/mcp-gmail.git"
  },
  "bugs": {
    "url": "https://github.com/dennisonbertram/mcp-gmail/issues"
  },
  "homepage": "https://github.com/dennisonbertram/mcp-gmail#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && mcp-build",
    "build:bundle": "node esbuild.config.js && node scripts/obfuscate.js",
    "build:all": "npm run build && npm run build:bundle",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest && mcp validate",
    "prepack": "npm run build && mcp validate",
    "validate": "mcp validate",
    "authenticate": "npm run build && node dist/cli/authenticate.js",
    "auth": "npm run authenticate",
    "setup": "bash scripts/setup-credentials.sh",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/nodemailer": "^7.0.3",
    "googleapis": "^164.1.0",
    "mcp-framework": "0.2.15",
    "nodemailer": "^7.0.10",
    "open": "^10.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.38.0",
    "javascript-obfuscator": "^4.1.1",
    "jest": "29.7.0",
    "playwright": "^1.56.1",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
